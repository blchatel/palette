<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/MAIN_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="159dp"
    android:orientation="vertical"
    tools:context="ch.epfl.cs413.palettev01.MainActivity"
    tools:showIn="@layout/activity_main">

    <!-- The image can be accessed with it's id and to modify the content we can transform it into a bitmap and then work on it -->
    <!-- The image dimension should be computed according to the size of the screen of the display. -->
    <ch.epfl.cs413.palettev01.views.Miniature
        android:id="@+id/MAIN_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_weight="0"
        android:keepScreenOn="true"
        android:src="@mipmap/bridge"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />

    <!-- This Layout can be accessed with it's id and in the JAVA code we should add the palettes color easily -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical">


        <ch.epfl.cs413.palettev01.views.Palette
            android:id="@+id/MAIN_paletteGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@android:dimen/notification_large_icon_height"
            android:layout_gravity="center_horizontal|center"
            android:animationCache="false"
            android:columnWidth="90dp"
            android:horizontalSpacing="10dp"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp">
            <!--TODO: Create the element ColorBox to print a color in a small box.-->
            <!--TODO: Each ColorBox should be clickable and should open a dialog color picker when clicked-->
        </ch.epfl.cs413.palettev01.views.Palette>
    </LinearLayout>
</LinearLayout>